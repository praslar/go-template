version: "3"
services:
  gitlab.com/jamalex-ltd/r-d-department/go-template:
    image: golang:1.14
    command: ["go", "run", "main.go"]
    working_dir: /gitlab.com/jamalex-ltd/r-d-department/go-template
    volumes:
      - .:/gitlab.com/jamalex-ltd/r-d-department/go-template
      - shared_gopath:/gopath
    depends_on:
      - postgres
    environment:
      HTTP_PORT: 80
      GOPATH: /gopath
    ports:
      - 8089:80

  postgres:
    image: postgres:11
    environment:
      POSTGRES_PASSWORD: awbblue
      POSTGRES_USER: awbblue
      POSTGRES_DB: awbblue
    volumes:
      - ./postgres_data:/var/lib/postgresql/data
    ports:
      - 5432:5432

  adminer:
    image: adminer:4
    ports:
      - 8888:8080

volumes:
  # use a shared gopath, avoid re-download module each go running
  shared_gopath: {}
